/*coding explore variabel menngunakan int,string,int,cin*/
//oleh ahmad danial hariadi dari fakultas tenik

#include <iostream>
using namespace std;

int main(){
    int nomor =1;
    string nama = "batman";
    cout<<nomor<<endl;
    cout<<nama<<endl;
    
}

/*menngabunggkan variabel menjadi satu*/

#include <iostream>
using namespace std;

int main(){
    int nomor = 1;
    int nama = "batman";
    cout<<nama<<"adalalah superhero"<<nomor<<endl;
}

///menngunakan variabel menjadi satu///

#include <iostream>
using namespace std;
int main(){
    string aktivitas = "berenang";
    string tempat = "kolam reanag";
    cout<<"saya sedang"<<aktivitas<<"di"<<tempat;
}

/*fungsi hurup \t untuk spasi agar terlihat menarik*/
#include <iostream>
using namespace std;
int main(){
    string aktivitas;
    string tempat;

    cout<<"apa aktivitas anda \t: ";
    cin>>aktivitas;

    cout<<"dimana anda "<<aktivitas<<"\t";
    cin>>tempat;
    cout<<"saya sedang" <<aktivitas<<" di"<<tempat;
    

}

